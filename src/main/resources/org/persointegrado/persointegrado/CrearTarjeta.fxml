<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="controllers.ControladorCrearTarjeta"
          xmlns:fx="http://javafx.com/fxml/1"
          alignment="CENTER"
          hgap="20" vgap="20"
          style="-fx-background-color: #000000;" prefWidth="600.0" prefHeight="400.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título de la pantalla -->
    <Label text="Crear Nueva Tarjeta" textFill="white" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Entrada para el Monto Inicial -->
    <Label text="Monto Inicial:" textFill="white" GridPane.rowIndex="1" GridPane.columnIndex="0"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="montoInicialField" GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-background-color: #1a1a1a; -fx-text-fill: white; -fx-font-size: 16px;"/>

    <!-- Botón para crear la tarjeta -->
    <Button text="Crear Tarjeta" onAction="#crearTarjeta"
            style="-fx-background-color: #103fdc; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
            GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <!-- Botón para volver al menú de usuario -->
    <Button text="Volver al Menú" onAction="#volverAlMenu"
            style="-fx-background-color: #444444; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"
            GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
